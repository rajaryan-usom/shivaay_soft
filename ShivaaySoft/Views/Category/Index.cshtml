@model IList<CategoryEntity>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="pb-10">
        <a href="/Category/Create" class="btn btn-primary">Create New</a>
    </div>
    <table id="datatable" class="mt-10">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        @if (Model != null)
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Title</td>
                        <td>
                            <a href="/category/edit/@item.Id" class="btn btn-primary">Edit</a>
                            <form asp-action="Delete" asp-controller="category" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-xs">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>

@section Scripts{
<script>
        $(document).ready( function () {
        $('#datatable').DataTable();
    } );
</script>
}
